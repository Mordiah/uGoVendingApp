<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/liquid_screen"
android:weightSum="1">

    <!--Text: Header-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid"
        android:id="@+id/liquid"
        android:textStyle="bold"
        android:gravity="center_vertical|left"
        android:textSize="19sp"
        android:layout_marginLeft="225dp" />
<!--Layout for Water -->
    <RelativeLayout
    android:layout_width="130dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginTop="-50dp"
    android:layout_marginRight="200dp"
    android:layout_marginLeft="-270dp"
    android:clickable="true"
    android:id="@+id/water_tag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid_1"
        android:id="@+id/liquid_1"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/floor_price"
        android:id="@+id/floor_price"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

<!--Layout for Coconut Water -->
<RelativeLayout
    android:layout_width="150dp"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:layout_marginLeft="-180dp"
    android:layout_marginTop="-50dp"
    android:clickable="true"
    android:id="@+id/cocowater_tag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid_2"
        android:id="@+id/liquid_2"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ceiling_price"
        android:id="@+id/ceiling_price"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

<!--Layout for Almond Milk -->
<RelativeLayout
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="-50dp"
    android:clickable="true"
    android:id="@+id/almondmilk_tag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid_3"
        android:id="@+id/liquid_3"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ceiling_price"
        android:id="@+id/ceiling_price"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    <!--Layout: Purchase Details-->
    <RelativeLayout
        android:layout_width="592dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-560dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_1"
            android:id="@+id/element_1"
            android:layout_alignParentStart="false"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_2"
            android:id="@+id/element_2"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="230dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_3"
            android:id="@+id/element_3"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="295dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_4"
            android:id="@+id/element_4"
            android:layout_alignParentEnd="false"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="450dp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_1_val"
            android:id="@+id/element_1_val"
            android:layout_below="@+id/element_1"
            android:layout_alignEnd="@+id/element_1"
            android:layout_marginRight="-20dp"
            android:gravity="center" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_2_val"
            android:id="@+id/element_2_val"
            android:layout_below="@+id/element_1"
            android:layout_alignEnd="@+id/element_1"
            android:layout_marginRight="-90dp"
            android:gravity="center" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_3_val"
            android:id="@+id/element_3_val"
            android:layout_below="@+id/element_1"
            android:layout_alignEnd="@+id/element_1"
            android:layout_marginRight="-180dp"
            android:gravity="center" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_4_val"
            android:id="@+id/element_4_val"
            android:layout_below="@+id/element_1"
            android:layout_alignEnd="@+id/element_1"
            android:layout_marginRight="-325dp"
            android:gravity="center" />

    </RelativeLayout>
    <!--Button: Language-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:text="@string/lingual"
        android:id="@+id/lingual_tag"
        android:layout_gravity="right|top"
        android:background="#00ffffff"
        android:textSize="10sp"
        android:clickable="true"
        android:layout_marginLeft="-70dp" />
    <!--Button: Previous-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previous_tag"
        android:layout_gravity="left|top"
        android:layout_marginLeft="-580dp"
        android:background="#00ffffff"
        android:textSize="10sp"
        android:clickable="true" />
    <!--Button: Refresh-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refresh_tag"
        android:layout_gravity="left|top"
        android:layout_marginLeft="15dp"
        android:background="#00ffffff"
        android:textSize="10sp"
        android:clickable="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/smoothie_tag"
        android:layout_marginLeft="-100dp"
        android:background="@drawable/green_smoothie"
        android:layout_gravity="bottom" />
</LinearLayout>
