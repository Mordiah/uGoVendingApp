<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/liquid_screen"
android:weightSum="1">

<!--Text: Header-->
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="@string/liquid"
        android:id="@+id/liquid"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="190dp" />
<!--Layout for Water -->
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="-550dp"
        android:clickable="true"
        android:id="@+id/water_tag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid_1"
        android:id="@+id/liquid_1"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/floor_price"
        android:id="@+id/floor_price"
        android:layout_marginTop="165dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

<!--Layout for Coconut Water -->
<RelativeLayout
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="-80dp"
    android:clickable="true"
    android:id="@+id/cocowater_tag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid_2"
        android:id="@+id/liquid_2"
        android:layout_marginTop="125dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ceiling_price"
        android:id="@+id/ceiling_price1"
        android:layout_marginTop="165dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

<!--Layout for Almond Milk -->
<RelativeLayout
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="-80dp"
    android:clickable="true"
    android:id="@+id/almondmilk_tag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/liquid_3"
        android:id="@+id/liquid_3"
        android:layout_marginTop="125dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ceiling_price"
        android:id="@+id/ceiling_price2"
        android:layout_marginTop="165dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

<!--Layout: Purchase Details-->
    <RelativeLayout
        android:layout_width="950dp"
        android:layout_height="165dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-830dp">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="165dp"
            android:id="@+id/smoothie_tag"
            android:layout_marginLeft="100dp"
            android:background="@drawable/green_smoothie"
            android:layout_gravity="bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_1"
            android:id="@+id/element_1"
            android:layout_alignParentStart="false"
            android:textStyle="bold"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="45dp"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_2"
            android:id="@+id/element_2"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:textSize="20sp"
            android:layout_marginLeft="365dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_3"
            android:id="@+id/element_3"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:textSize="20sp"
            android:layout_marginLeft="452dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/element_4"
            android:id="@+id/element_4"
            android:layout_alignParentEnd="false"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:textSize="20sp"
            android:layout_marginLeft="700dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_1_val"
            android:textSize="15sp"
            android:id="@+id/element_1_val"
            android:gravity="center_vertical|center"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="80dp"
            android:editable="true" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_2_val"
            android:textSize="15sp"
            android:id="@+id/element_2_val"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical|left"
            android:editable="true" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_3_val"
            android:id="@+id/element_3_val"
            android:background="@color/colorPrimary"
            android:textSize="15sp"
            android:gravity="center_vertical|center"
            android:layout_marginLeft="447dp"
            android:layout_marginTop="80dp"
            android:editable="true" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/element_4_val"
            android:textSize="15sp"
            android:id="@+id/element_4_val"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="660dp"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical|center"
            android:editable="true" />

    </RelativeLayout>

<!--Button: Previous-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/previous_tag"
        android:layout_gravity="left|top"
        android:layout_marginLeft="-910dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:clickable="true" />
<!--Button: Refresh-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/refresh_tag"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:clickable="true" />
<!--Button: Language-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/lingual"
        android:id="@+id/lingual_tag"
        android:layout_marginLeft="565dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:layout_gravity="right|top"
        android:textSize="25sp"
        android:clickable="true" />

</LinearLayout>
