<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="#6e23a1b1">


    <RelativeLayout
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="14dp"
    android:background="@color/colorPrimary"
    android:layout_marginTop="30dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="25sp"
            android:text="@string/ingredients_g"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="330dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="25sp"
            android:text="@string/ingredients_t"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="650dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="25sp"
            android:text="@string/ingredients_b"/>

    </RelativeLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="430dp"
        android:id="@+id/exit_tag"
        android:text="Click to Dismiss"
        android:background="#bb10128e" />
</RelativeLayout>