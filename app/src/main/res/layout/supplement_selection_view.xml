<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/powder_screen"
    android:weightSum="1"
    android:orientation="horizontal">

<!--Layout: Purchase Details-->
<RelativeLayout
    android:layout_width="950dp"
    android:layout_height="150dp"
    android:layout_gravity="bottom"
    android:layout_marginLeft="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:id="@+id/smoothie_tag"
        android:layout_marginLeft="55dp"
        android:background="@drawable/green_smoothie"
        android:layout_gravity="bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/element_1"
        android:id="@+id/element_1"
        android:layout_alignParentStart="false"
        android:textStyle="bold"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/element_2"
        android:id="@+id/element_2"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="315dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/element_3"
        android:id="@+id/element_3"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="405dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/element_4"
        android:id="@+id/element_4"
        android:layout_alignParentEnd="false"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginLeft="635dp" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/element_1_val"
        android:id="@+id/element_1_val"
        android:layout_below="@+id/element_1"
        android:layout_marginLeft="200dp"
        android:gravity="center" />
    <TextView
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/element_2_val"
        android:id="@+id/element_2_val"
        android:layout_below="@+id/element_1"
        android:layout_alignEnd="@+id/element_1"
        android:layout_marginRight="-113dp"
        android:gravity="center" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/element_3_val"
        android:id="@+id/element_3_val"
        android:layout_below="@+id/element_1"
        android:layout_alignEnd="@+id/element_1"
        android:gravity="center"
        android:layout_marginRight="-263dp" />
    <TextView
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/element_4_val"
        android:id="@+id/element_4_val"
        android:layout_below="@+id/element_1"
        android:layout_alignEnd="@+id/element_1"
        android:layout_marginRight="-460dp"
        android:gravity="center" />

</RelativeLayout>

<!--Layout for No Supplement -->
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="-85dp"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="-930dp"
        android:id="@+id/nextTime_tag"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_supplement"
            android:id="@+id/no_supplement"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

    </RelativeLayout>

<!--Layout for Smashed Almonds-->
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="-85dp"
        android:layout_marginLeft="-145dp"
        android:id="@+id/alm_tag"
        android:clickable="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/supplement_1"
            android:id="@+id/supplement_1"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="30dp" />

    </RelativeLayout>

<!--Layout for PUMPKIN SEED POWDER -->
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="05dp"
        android:layout_marginTop="-85dp"
        android:id="@+id/pmkn_tag"
        android:clickable="true">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/supplement_2"
            android:id="@+id/supplement_2"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"

            android:gravity="center_horizontal" />
    </RelativeLayout>

<!--Layout for GROUND FLAX SEED -->
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-85dp"
        android:id="@+id/flx_tag"
        android:clickable="true">>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/supplement_3"
            android:id="@+id/supplement_3"
            android:textStyle="bold"
            android:layout_alignParentStart="false"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentEnd="false"
            android:textSize="20sp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />
    </RelativeLayout>

<!--Layout for HEMP PROTEIN -->
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-85dp"
        android:id="@+id/hp_tag"
        android:clickable="true">>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/supplement_4"
            android:id="@+id/supplement_4"
            android:textStyle="bold"
            android:layout_alignParentStart="false"
            android:textSize="20sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentEnd="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />

    </RelativeLayout>

<!--Text: Header-->
    <TextView
        android:layout_width="500dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/supplement"
        android:id="@+id/supplement"
        android:layout_gravity="top"
        android:layout_marginLeft="-630dp"
        android:layout_marginTop="5dp"
        android:textSize="40sp"
        android:gravity="center_horizontal" />

<!--Button: Previous-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/previous_tag"
        android:layout_gravity="left|top"
        android:layout_marginLeft="-675dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:clickable="true" />

<!--Button: Refresh-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/refresh_tag"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#00ffffff"
        android:clickable="true" />

<!--Button: Language-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/lingual"
        android:id="@+id/lingual_tag"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right|top"
        android:background="#00ffffff"
        android:textSize="15sp"
        android:clickable="true" />

</LinearLayout>


