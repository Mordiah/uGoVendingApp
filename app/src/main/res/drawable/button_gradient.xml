<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:centerX="35%"
                android:centerColor="#47702A"
                android:startColor="#224520"
                android:endColor="#49BD37"
                android:type="linear"
                />
            <corners
                android:radius="50dp"
                />
            <stroke
                android:width="3dp"
                android:color="#474747"
                />
        </shape>
    </item>
</selector>